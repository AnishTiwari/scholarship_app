@model IList<scholarship_app.Models.listing>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>E-Scholarship</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</head>
<body>
    <div>

        @Html.ActionLink("My Scholarships", "Index", "scholarship_details")
        @if (Model.Count == 0)
        {

            <div>

                <h2>SORRY NOT SCHOLARSHIPS FOUND :( VISIT LATER !!!!!! </h2>
            </div>
        }

        @for (var i = 0; i < Model.Count; i++)

        {
    <div class="list-group disabled">
        @if (Model[i].availeds.Where(x => x.student_id == Model[i].student_id).Count() >= Model[i].NoAvailable)
        {
            @Html.ActionLink("APPLY", "Create", "scholarship_details", new { id = Model[i].Id }, null)
            <a href="#" class="list-group-item list-group-item-action flex-column align-items-start disabled  ">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@Html.DisplayFor(model => model[i].GivenBy)</h5>
                    <small>@Html.DisplayFor(model => model[i].CreatedTime)</small>


                    @*<p class="mb-1">@Html.DisplayFor(model => model[i].availeds)</p>*@
                    <small>@Html.DisplayFor(model => model[i].Amount)  &nbsp;@Html.DisplayFor(model => model[i].Currency)</small>
                    <small>@Html.DisplayFor(model => model[i].EndDate)</small>
                </div>
            </a>
        }

        else
        {
            <div>
                <a href="#" class="list-group-item list-group-item-action flex-column align-items-start  ">

                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@Html.DisplayFor(model => model[i].GivenBy)</h5>
                        <small>@Html.DisplayFor(model => model[i].CreatedTime)</small>

                        @Html.ActionLink("APPLY", "Create", "scholarship_details", new { id = Model[i].Id }, null)
                        @*<p class="mb-1">@Html.DisplayFor(model => model[i].availeds.Count())</p>*@
                        <small>@Html.DisplayFor(model => model[i].Amount)  &nbsp;@Html.DisplayFor(model => model[i].Currency)</small>
                        <small>@Html.DisplayFor(model => model[i].EndDate)</small>
                    </div>
                </a>
            </div>}

    </div>
        }

    </div>
</body>
</html>
