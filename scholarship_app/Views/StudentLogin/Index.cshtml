
@model scholarship_app.Models.student
@{
    ViewBag.Title = "Login";
}
<h2 style="align-content:center; text-align:center;">
    Login
</h2>
@using (Html.BeginForm())
{


    <div style="border: solid 1px #ccc; padding: 30px 0 30px 30px; border-radius: 5px;
        width: 325px; margin: auto; display: table;">
        <table>
            <tr>
                <td valign="top">
                    @Html.LabelFor(model => model.Name) &nbsp; &nbsp;
                </td>
                <br />

                <td>
                    @Html.EditorFor(model => model.Name)
                    <div style="height: 20px;">
                        @Html.ValidationMessageFor(model => model.Name)
                </div>
            </td>
        </tr>
        <tr>
            <td valign="top">
                @Html.LabelFor(model => model.Email) &nbsp; &nbsp;
            </td>
            <td>
                @Html.EditorFor(model => model.Email)
                <div style="height: 20px;">
                    @Html.ValidationMessageFor(model => model.Email)
            </div>
        </td>
    </tr>
    <tr>
        <td>
        </td>
        <td>
            <br />
            <input type="submit" value="Login" />
        </td>
    </tr>
</table>
        <div>
            <br />
            <p>Don't have an account @Html.ActionLink(" Register", "Create", "students")</p>
        </div>
</div>
}
